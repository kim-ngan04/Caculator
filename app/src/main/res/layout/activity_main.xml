<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#D3D3D3">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="48sp"
        android:text="0"
        android:padding="16dp"
        android:background="#F0F0F0"
        android:textColor="#000000"
        android:minHeight="100dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:rowCount="5"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="CE"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnBS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="BS"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <!-- Dòng thứ hai: 7, 8, 9, x -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="x"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <!-- Dòng thứ ba: 4, 5, 6, - -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <!-- Dòng thứ tư: 1, 2, 3, + -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

        <!-- Dòng thứ năm: +/-, 0, ., = -->
        <Button
            android:id="@+id/btnSign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+/-"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="18sp"
            android:background="#E0E0E0"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="18sp"
            android:background="#F0F0F0"
            android:textColor="#000000" />

    </GridLayout>
</LinearLayout>
